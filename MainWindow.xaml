<Window x:Class="ReceiptPrinterEmulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ESC/POS Receipt Printer Emulator"
        Height="850" Width="665" MinWidth="665"
        Background="#262626"
        Loaded="MainWindow_OnLoaded"
        >
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
        <StackPanel Name="ReceiptImageRoot">
            <Grid Background="#3b3b3b">
                <Grid Margin="15">
                    <TextBlock Text="!Status!" Foreground="White" Name="Address" FontWeight="Bold"/>
                </Grid>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
